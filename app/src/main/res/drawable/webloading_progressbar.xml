        <shape>
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:angle="0.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1.0dip" />
                <gradient android:startColor="@color/btn_color_red" android:endColor="@color/btn_color_red" android:angle="0.0" />
            </shape>
        </clip>
    </item>
</layer-list>